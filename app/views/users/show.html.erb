<div class=container px-5 sm-0>
  <div class="row">
    <%= render 'books/usersinfo', user: @user, book: @new_book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hovor table-inverse">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>    <%# @books = @user.books %>
          <tr>
            <td>
            <%=link_to user_path(book.user) do %>
              <%= attachment_image_tag(book.user, :profile_image, size: "100x100", format: 'jpeg',class:"fallback", fallback: "no_image.jpg") %></br>
              <%= book.user.name %>
            <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
               <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @books %>
    </div>
  </div>
</div>