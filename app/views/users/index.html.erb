<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/usersinfo', user: current_user, book: @new_book %>
    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th>&nbsp;</th>
          <th colspn="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag(user, :profile_image, size: "100x100", format: 'jpeg',class:"user", fallback: "no_image.jpg") %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
          <%= link_to "Show", user_path(user.id) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
