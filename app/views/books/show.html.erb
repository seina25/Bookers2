<div class="container">
  <div class="row">
    <%= render 'books/usersinfo', book:@new_book, user:@user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
             <%=link_to user_path(@book.id) do %>
               <%= attachment_image_tag(@user, :profile_image, :fill, 100, format: 'jpeg',class:"user", fallback: "no_image.jpg") %></br>
               aaaa
             <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
               <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>