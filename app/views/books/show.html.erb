<div class="container">
  <div class="row">
    <%= render 'books/usersinfo', user: @user, book: @new_book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
             <%=link_to user_path(@user.id) do %>
               <%= attachment_image_tag(@user, :profile_image, size: "100x100", format: 'jpeg',class:"user", fallback: "no_image.jpg") %></br>
               <%= @user.name %>
             <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
               <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
            <% if @user.id == current_user.id %>
              <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
            <% end %>
            </td>
            <td>
            <% if @user.id == current_user.id %>
              <%= link_to "Destroy", book_path(@book.id), class: 'btn btn-sm btn-danger', method: :delete %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>